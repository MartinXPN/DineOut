<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dineoutmobile.dineout.activities.ActivityViewRestaurant"
    tools:showIn="@layout/activity_view_restaurant">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo, Name, Short description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/restaurant_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_test"
                android:clickable="false"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                app:border="false"
                app:shadow="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="#111111"
                    android:text="Երևան Պանդոկ" />

                <RatingBar
                    android:id="@+id/restaurant_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="4.3"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:id="@+id/restaurant_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:text="Խորոված, շաուրմա, գինի, խաշ, համեղ ուտեստներ և այլն..." />
            </LinearLayout>
        </LinearLayout>


        <!-- Basic info -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/restaurant_basic_info_grid"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"

            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#2d2d2d"
            android:text="Details" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/restaurant_details_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- Google Maps -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"

            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#2d2d2d"
            android:text="Գյուլբենկյան 21" />
        <!--fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:name="com.google.android.gms.maps.SupportMapFragment" /-->
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
