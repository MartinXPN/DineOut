<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/restaurant_services_container"
    android:layout_width="@dimen/restaurant_services_grid_item_size"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="?attr/selectableItemBackgroundBorderless">


    <ImageButton
        android:id="@+id/restaurant_services_grid_image"
        android:layout_width="@dimen/restaurant_services_grid_item_logo_size"
        android:layout_height="@dimen/restaurant_services_grid_item_logo_size"
        android:clickable="false"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_green" />


    <TextView
        android:id="@+id/restaurant_services_grid_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top|center_horizontal"
        android:textSize="@dimen/text_secondary_size"
        android:textColor="@color/restaurant_services_grid_description"
        android:lines="2"
        android:ellipsize="end" />

</LinearLayout>
